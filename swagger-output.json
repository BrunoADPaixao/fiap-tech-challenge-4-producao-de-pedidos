{
  "swagger": "2.0",
  "info": {
    "title": "API do Microsserviço de Produção",
    "description": "API para gerenciar o fluxo de preparação de pedidos na cozinha.",
    "version": "1.0.0"
  },
  "host": "localhost:3002",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "post": {
        "tags": [
          "Produção"
        ],
        "summary": "Cria um novo pedido na fila (contrato atualizado).",
        "description": "Endpoint para registrar um novo pedido vindo do microsserviço de Pedidos.",
        "parameters": [
          {
            "name": "pedido",
            "in": "body",
            "description": "Dados do novo pedido conforme contrato.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "example": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "cliente_id": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "example": "string"
                        },
                        "example": {
                          "type": "string",
                          "example": "12345678901"
                        }
                      }
                    },
                    "itens": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "example": "array"
                        },
                        "items": {
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "example": "object"
                            },
                            "properties": {
                              "type": "object",
                              "properties": {
                                "produto_id": {
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "example": "integer"
                                    },
                                    "example": {
                                      "type": "number",
                                      "example": 1
                                    }
                                  }
                                },
                                "nome_produto": {
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "example": "string"
                                    },
                                    "example": {
                                      "type": "string",
                                      "example": "Hambúrguer Clássico"
                                    }
                                  }
                                },
                                "categoria": {
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "example": "string"
                                    },
                                    "example": {
                                      "type": "string",
                                      "example": "Lanche"
                                    }
                                  }
                                },
                                "quantidade": {
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "example": "integer"
                                    },
                                    "example": {
                                      "type": "number",
                                      "example": 2
                                    }
                                  }
                                },
                                "preco_unitario": {
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "example": "number"
                                    },
                                    "example": {
                                      "type": "number",
                                      "example": 15.5
                                    }
                                  }
                                },
                                "observacoes": {
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "example": "string"
                                    },
                                    "example": {
                                      "type": "string",
                                      "example": "Sem cebola"
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/fila": {
      "get": {
        "tags": [
          "Produção"
        ],
        "summary": "Lista os pedidos na fila da cozinha.",
        "description": "Retorna todos os pedidos que ainda não foram finalizados.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/todos": {
      "get": {
        "tags": [
          "Produção"
        ],
        "summary": "Lista todos os pedidos já registrados.",
        "description": "Retorna um histórico completo de todos os pedidos.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/{id}/status": {
      "put": {
        "tags": [
          "Produção"
        ],
        "summary": "Atualiza o status de um pedido.",
        "description": "Altera o status de um pedido específico (ex: Recebido -> Em preparação).",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do Pedido."
          },
          {
            "name": "status",
            "in": "body",
            "description": "O novo status do pedido.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "example": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "example": "string"
                        },
                        "example": {
                          "type": "string",
                          "example": "Em preparação"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}